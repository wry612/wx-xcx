.news-wrap {
  padding: 20rpx;
  background: #fff;
}
.title {
  font-size: 15pt;
  font-weight: bold;
  line-height: 1.5;
}
.info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0;
  color: #999;
  font-size: 11pt;
}
.info view {
  height: 36rpx;
  line-height: 36rpx;
}
.praise {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info image {
  width: 40rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.text{
    font-size:13pt;
    line-height: 1.5;
}
.content{
    position: relative;
    padding-bottom:50rpx;
}
.content image{
    width: 100%;
    margin:10rpx 0;
}
.content video{
    width: 100%;
    margin:10rpx 0;
}
.btn-praise{
    position: absolute;
    bottom:-60rpx;
    left:50%;
    width: 120rpx;
    height:120rpx;
    margin-left:-60rpx;
    color:#fff;
    font-size:13pt;
    text-align: center;
    background:#aa0000;
    border-radius:100%;
}
.btn-praise image{
    width: 40rpx;
    height: 40rpx;
    margin-top:20rpx;
}
.guest-book{
    padding:80rpx 0;
}
.book-title{
    text-align: center;
}
.book-item{
padding:20rpx 30rpx;
border-bottom:2rpx solid #ccc;
}
.book-info{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.book-name{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.book-name image{
    width: 60rpx;
    height: 60rpx;
    margin-right:20rpx;
}
.book-name text{
    color:#666;
    font-size:13pt;
}
.book-time{
    color:#999;
    font-size:11pt;
}
.book-text{
    margin-top:20rpx;
    font-size:12pt;
    line-height: 1.5;
}
.book-box{
position: fixed;
bottom: 0;
left: 0;
width: 100%;
height: 80rpx;
padding: 10rpx 20rpx;
background: rgb(248,248,248);
border-top:2rpx solid #ccc;
z-index: 10;
box-sizing: border-box;
}
.book-box input{
    width: 100%;
    height: 60rpx;
    padding:0 20rpx;
    font-size:10pt;
    line-height: 56rpx;
    background: #fff;
    border:2rpx solid #ccc;
    border-radius:8rpx;
    box-sizing: border-box;
}
.page-cover{
    position: fixed;
    left:0;
    top:0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.7);
    z-index: 100;
}
.pop-text{
position: absolute;
bottom: 0;
left: 0;
width: 100%;
padding: 20rpx 20rpx;
background: #fff;
border-top:2rpx solid #ccc;
z-index: 10;
box-sizing: border-box;
}
.text-btn{
    display: flex;
    align-items: center;
    justify-content:space-between;
}
.text-btn button{
    margin:0;
}
.pop-text textarea{
    width: 100%;
    height: 400rpx;
    margin-top:20rpx;
    padding:20rpx;
    font-size:12pt;
    line-height: 1.5;
    border:2rpx solid #ccc;
    border-radius:8rpx;
    box-sizing: border-box;
}
