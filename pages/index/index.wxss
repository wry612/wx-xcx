/**index.wxss**/
swiper {
  width: 100%;
  height: 352rpx;
  overflow: hidden;
}
image{
  width:100%;
}
.swiper-link{
  position: relative;
  height: 100%;
  width: 100%;
}
.swiper-title{
  position: absolute;
  left: 0;
  bottom:0;
  width: 100%;
  height: 52rpx;
  padding:0 30rpx;
  color:#fff;
  font-size:11pt;
  line-height: 52rpx;
  background: rgba(0,0,0,7);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}
.wx-swiper-dots.wx-swiper-dots-horizontal{
  position:absolute;
  left:680rpx;
  width: 80rpx;
}
.news-item{
  background:#fff;
  border-bottom:2rpx solid #ccc;
}
.swiper-link{
  display: block;
  padding:20rpx 30rpx;
  box-sizing: border-box;
}
.news-wrap{
  background:#eee;
}
.item-img{
  float: left;
  height: 156rpx;
}
.item-img image{
  width: 244rpx;
  height:156rpx;
}
.item-title{
  float: left;
  width: 420rpx;
  margin-left:20rpx;
}
.title{
  display: -webkit-box;  
  overflow: hidden;  
  text-overflow: ellipsis;  
  word-break: break-all;  
  -webkit-box-orient: vertical;  
  -webkit-line-clamp:2;
  height: 84rpx;
  font-size:14pt;
  line-height: 42rpx;
}
.item-comment{
  margin-top:36rpx;
}
.item-comment image{
  float: right;
  width: 40rpx;
  height:36rpx;
  margin-left:20rpx;
}
.item-comment text{
  float:right;
  height: 36rpx;
  color:#888;
  font-size:11pt;
  line-height: 36rpx;
}
.news-video{
  position: relative;
  margin:10rpx 0;
  background: #eee;
}
.news-video image{
  width: 100%;
  height:388rpx;
}
.video-cover{
  position:absolute;
  left:0;
  top:0;
  width: 100%;
  height: 388rpx;
  background:rgba(0,0,0,0.7);
}
.video-title{
  margin-top:110rpx;
  color:#fff;
  font-size:17pt;
  text-align: center;
}
.video-img{
  margin-top:20rpx;
  text-align: center;
}
.video-img image{
  width:120rpx;
  height:120rpx;
}
.news-img{
  margin:10rpx 0;
  background:#fff;
  border-top:2rpx solid #ccc;
  border-bottom:2rpx solid #ccc;
}
.img-title{
  padding:10rpx 0 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.img-list{
  display: flex;
  justify-content: space-between;
}
.img-list image{
  width: 216rpx;
  height:216rpx;
}
.mt24{
  margin-top:24rpx;
}







