.section {
  position: relative;
  padding: 20rpx 30rpx;
  background: transparent;
  border-bottom:2rpx solid #ccc;
}
.section input {
  width: 100%;
  height: 60rpx;
  padding: 0 20rpx;
  font-size:11pt;
  background: #fff;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.search{
  position: absolute;
  right:50rpx;
  top:28rpx;
  z-index: 1;
}
.search-section{
    padding:20rpx 30rpx;
}
.title{
    font-size:14pt;
    line-height: 1.5;
}
.search-item{
    display: flex;
    flex-wrap:wrap;
}
.search-item button{
    padding:14rpx 20rpx;
    margin:20rpx 40rpx 0 0;
    color:#fff;
    font-size:12pt;
    line-height: 1;
    background: #666;
    border-radius:8rpx;
}